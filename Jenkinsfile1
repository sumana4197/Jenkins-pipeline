pipeline {
    agent none 
        stages {
            stage ('Cloning a repository') {
            agent {label 'slave01'}
                steps {
                    git 'https://github.com/sumana4197/jenkins-pipeline.git'
                    echo "cloning is successful"
                    }
                  }
             stage ('build') {
             agent {label 'slave01'}
                steps {
                    sh 'mvn clean install'
                    echo "building is successful"
                    }
                  }
                }
              }
